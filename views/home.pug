                option(value='Madurai') Madurai
                option(value='Rameswaram') Rameswaram
                option(value='Hyderabad') Hyderabad
            .form-group
              label(for='dropoff-location') Drop-off Location
              select#dropoff-location(name='dropoffLocation', required)
                option(value='') Select Location
                option(value='Bengaluru') Bengaluru
                option(value='Mysuru') Mysuru
