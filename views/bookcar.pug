extends base.pug

block content
  div.bookcontainer 
        h1 Car Booking
        form(action=`/bookcar/${car.carnumber}`, method="post", class="myForm") 
            input(type="text", class="myinput", name="name", value=user.name readonly required, autocomplete="name")
            input(type="email", class="myinput", name="email", value=user.email readonly required, autocomplete="email")
            input(type="text" class="myinput" name="carnumber" value=car.carnumber readonly)
            input(type="text", class="myinput", name="pickupLocation", placeholder="Enter pickup location", value=prebooking ? prebooking.pickupLocation : '', required)
            input(type="date", class="myinput", name="pickupDate", id="pickup-date", value=prebooking ? prebooking.pickupDate.toISOString().split('T')[0] : '', required)
            input(type="time", class="myinput", name="pickupTime", id="pickup-time", value=prebooking ? prebooking.pickupTime : '', required)
            input(type="text", class="myinput", name="dropoffLocation", placeholder="Enter drop off location", value=prebooking ? prebooking.dropoffLocation : '', required)
            input(type="number", class="myinput", name="numberOfDays", id="number-of-days", value=numberOfDays, min="1", required)
            input(type="number", class="myinput", name="rate" id="rate", value=car.rate readonly)
            input(type="number", class="myinput", name="totalPrice", id="totalPrice", placeholder="Total amount" readonly)
            button(type="submit",class="btn") 
                | Book Now

block scripts