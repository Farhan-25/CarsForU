extends base.pug 

block scripts
  script(src="/static/index.js") 

block style 
    style 
      include ../static/home.css

block content 
    section.contact 
        div.container
        div.contcontainer
            div.leftside 
                div.l1
                    h1 Contact
                div.l2
                    p Reach Out and Connect
            div.contactcontainer
                h1 Contact us
                    form(action="/contact", method="post", class="myForm") 
                        input(type="text", class="myinput", name="name", placeholder="Enter your name" required)
                        input(type="number", class="myinput", name="age", placeholder="Enter your age" required)
                        input(type="text", class="myinput", name="gender", placeholder="Enter your gender" required)
                        input(type="text", class="myinput", name="phone", placeholder="Enter your phone number" required)
                        input(type="email", class="myinput", name="email", placeholder="Enter your email ID" required)
                        input(type="text", class="myinput", name="address", placeholder="Enter your address" required)
                        button(type="submit",class="btn") 
                            | Submit